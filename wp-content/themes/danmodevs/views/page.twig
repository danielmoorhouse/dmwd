{% extends "base.twig" %}

{% block content %}
  <section class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
   {% include "./components/_hero.twig" with {
    'hero_title' : post.title,
   } %}
   {% if post.content %}
    <div class="container px-5 py-4 text-satoshi">
    <div class="content-wrapper px-3 py-3">
        {{ post.content }}
        </div>
      </div>
      {% else %}
         <div class="container px-4 py-4">
          {% include "./components/alerts/alert-info.twig" with {
            'bold_intro': 'Apologies!',
            'info_message': 'There doesn`t seem to be any content for this page'
          } %}
         </div>
   {% endif %}
   

  </section>
