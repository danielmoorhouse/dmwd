{% extends "./base.twig" %}

{% block content %}
{% set tags = post.meta('tags') %}
{% include "./components/_hero.twig" with {
    'hero_title': post.title,
} %}
<section class="bg-ghost-white">
<div class="container">
<div class="row">
<div class="col-8 py-5">
<div class="px-4 py-4 card bg-white border-0 shadow-lg">
{{ post.meta('service_details') }}

{% include "./components/_chat-links.twig" %}

</div>
</div>
<div class="col-4 py-4 px-2">
<img class="w-60" src="{{ post.meta('main_service_image').url }}" alt="{{ post.meta('main_service_image').alt }}">
</div>
</div>
<div class="row">
<div class="col-1"></div>
<div class="col-8 py-3">
<div class="px-4 py-4 card text-ghost-white shadow-lg" style="background-color:{{ post.meta('service_theme_primary') }}">
{{ post.meta('service_details_2') }}
</div>
</div>
<div class="col-3">

</div>
</div>

</div>
<div class="container py-3 px-5 pb-5 text-satoshi ">

<h3>service tags</h3>
 {% for term in post.terms('tags') %}

<span class="badge" style="background-color:{{ post.meta('service_theme_primary') }}">{{ term }}</span>&nbsp;
    
{% endfor %}
</div>
</section>
{% endblock %}
